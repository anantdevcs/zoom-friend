    <script>
        
        function doit() {
            const inputElement = document.getElementById('input');
            inputElement.addEventListener("change", handleFiles, false);
            function handleFiles() {
                const selectedFile = document.getElementById('input').files[0];
                const fileList = this.files; 
                console.log(fileList);
            }

        }

        function upload() {
            const selectedFile = document.getElementById('input');
            let trans = document.getElementById('trans');
            trans.innerHTML = "Loading..."
            let summ = document.getElementById('summary');
            summ.innerHTML = "Loading..."
            let xhr = new XMLHttpRequest();
            let formData = new FormData();
            let file = selectedFile.files[0];      
            
            formData.append("file", file);
            
            xhr.onreadystatechange = state => { 
                // console.log(xhr.status); 
                // console.log(file);
                // console.log(xhr.responseText);
                var myObj = JSON.parse(xhr.responseText);
                console.log(myObj);
                trans_inner = "<ul>";
                summ_inner = "<ul>"
                for (var i = 0 ; i < myObj.summ.length; i++) {
                    trans_inner = "<li>" + myObj.trans[i] + "</li>";
                    summ_inner = "<li>" + myObj.summ[i] + "</li>";
                }
                trans_inner += '</ul>';
                summ_inner += '</ul>';
                trans.innerHTML = trans_inner;
                summ.innerHTML = summ_inner;
            } // err handling
            xhr.open("POST", '/upload');    
            xhr.send(formData);
        }

        
    </script>
